@model SentosaWebsite.Models.Attraction

@{
    ViewBag.Title = "Details";
}



<h2>Details</h2>

<div>
    <h4>Attraction</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Attraction Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.atName)
        </dd>

        <dt>
            Description:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.atDes)
        </dd>
        <dt>
            Attraction Type:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.atType)
        </dd>
        <dt>
           Transport mode
        </dt>
        <dd>
            @Html.DisplayFor(model => model.atTransportMode)
        </dd>
        <dt>
            Transport description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.atTransportDes)
        </dd> 



        <img alt="" src="~/Images/Attractions/@Html.DisplayFor(modelItem => Model.atImage) " />

    </dl>

    <br />
    <div id="map_canvas" style="width: 640px; height: 480px;">
    </div>  
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
  
    @Html.ActionLink("Back to List", "Index")
</p>

 